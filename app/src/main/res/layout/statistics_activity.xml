<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Statistics"
        android:id="@+id/stats_title"
        android:textStyle="bold"
        android:textSize="30sp"/>
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/stats_title">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/stats_title"
                android:text="Team Stats"
                android:textSize="30dp"
                android:id="@+id/teamStatsButton"
                android:onClick="goTeamStats"/>

            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/teamStatsButton"
                android:text="My Stats"
                android:textSize="30dp"
                android:id="@+id/myStatsButton"
                android:onClick="goMyStats"
                android:visibility="invisible"/>


            <Button
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/myStatsButton"
                android:text="Analyse"
                android:textSize="30dp"
                android:id="@+id/analyseButton"
                android:onClick="goAnalyseStats"
                android:visibility="invisible"/>
        </LinearLayout>
    </ScrollView>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/notice_back_button"
        android:text="Back"
        android:onClick="onBackButton"
        android:layout_alignParentBottom="true"/>



</RelativeLayout>