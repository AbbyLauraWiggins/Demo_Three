<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:id="@+id/member_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textStyle="bold"
        android:text="@string/membername" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_alignParentEnd="true"
        app:srcCompat="@drawable/profile_image" />

    <TextView
        android:id="@+id/team_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:layout_below="@id/member_name"
        android:text="@string/teamname"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/email"
        android:layout_below="@id/team_name"
        android:text="@string/email_address"
        android:textSize="20sp"
        android:paddingBottom="30dp"/>

    <TextView
        android:id="@+id/pos_played_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_below="@id/email"
        android:text="@string/positions_played_title"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/positions_played"
        android:layout_below="@id/pos_played_title"
        android:text="@string/positions_played"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addPosition"
        android:text="@string/add_position"
        android:layout_below="@id/positions_played"
        android:onClick="addPosition"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/resp_title"
        android:text="@string/responsibilities_title"
        android:layout_below="@id/addPosition"
        android:paddingTop="30dp"
        android:textStyle="bold"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/responsibilities"
        android:layout_below="@id/resp_title"
        android:text="@string/responsibilities"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addResponsibilty"
        android:text="@string/add_responsibility"
        android:layout_below="@id/responsibilities"
        android:onClick="addResponsibility"
        />


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@id/back_button"
        android:text="@string/back"
        android:onClick="onBackButton"
        android:layout_alignParentBottom="true"/>




</RelativeLayout>