<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log Game Statistics"
        android:id="@+id/logGameStatsTitle"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="30sp"/>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/frontRowLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/logGameStatsTitle"
        android:columnCount="3">

        <Button
            android:id="@+id/button1"
            android:layout_column="0"
            android:layout_gravity="top"
            android:text="1" />

        <Button
            android:id="@+id/button2"
            android:layout_column="1"
            android:layout_gravity="top"
            android:text="2" />

        <Button
            android:id="@+id/button3"
            android:layout_column="2"
            android:layout_gravity="top"
            android:text="3" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondRowLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/frontRowLayout"
        android:columnCount="4">

        <Button
            android:id="@+id/button6"
            android:layout_column="0"
            android:layout_gravity="top"
            android:text="6" />

        <Button
            android:id="@+id/button4"
            android:layout_column="1"
            android:layout_gravity="top"
            android:text="4" />

        <Button
            android:id="@+id/button5"
            android:layout_column="2"
            android:layout_gravity="top"
            android:text="5" />

        <Button
            android:id="@+id/button7"
            android:layout_column="3"
            android:layout_gravity="top"
            android:text="7" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backRowLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/secondRowLayout"
        android:columnCount="1">

        <Button
            android:id="@+id/button8"
            android:layout_column="0"
            android:layout_gravity="top"
            android:text="8" />


    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/backLineLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/backRowLayout"
        android:columnCount="4">

        <Button
            android:id="@+id/button9"
            android:layout_column="0"
            android:layout_gravity="top"
            android:text="9" />

        <Button
            android:id="@+id/button10"
            android:layout_column="1"
            android:layout_gravity="top"
            android:text="10" />

        <Button
            android:id="@+id/button12"
            android:layout_column="2"
            android:layout_gravity="top"
            android:text="12" />

        <Button
            android:id="@+id/button13"
            android:layout_column="3"
            android:layout_gravity="top"
            android:text="13" />

    </GridLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/backLineLayout"
        android:id="@+id/wingerLayout">

        <Button
            android:id="@+id/button11"
            android:layout_alignParentLeft="true"
            android:layout_gravity="top"
            android:text="11"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

        <Button
            android:id="@+id/button14"
            android:layout_alignParentRight="true"
            android:layout_gravity="top"
            android:text="14"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wingerLayout"
        android:id="@+id/fullBackLayout">

        <Button
            android:id="@+id/button15"
            android:layout_centerHorizontal="true"
            android:layout_gravity="top"
            android:text="15"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>

    </RelativeLayout>


    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/firstSubsLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/fullBackLayout"
        android:columnCount="4">

        <Button
            android:id="@+id/button16"
            android:layout_column="0"
            android:layout_gravity="top"
            android:text="16" />

        <Button
            android:id="@+id/button17"
            android:layout_column="1"
            android:layout_gravity="top"
            android:text="17" />

        <Button
            android:id="@+id/button18"
            android:layout_column="2"
            android:layout_gravity="top"
            android:text="18" />

        <Button
            android:id="@+id/button19"
            android:layout_column="3"
            android:layout_gravity="top"
            android:text="19" />

    </GridLayout>

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/secondSubsLayout"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/firstSubsLayout"
        android:columnCount="3">

        <Button
            android:id="@+id/button20"
            android:layout_column="0"
            android:layout_gravity="top"
            android:text="20" />

        <Button
            android:id="@+id/button21"
            android:layout_column="1"
            android:layout_gravity="top"
            android:text="21" />

        <Button
            android:id="@+id/button22"
            android:layout_column="2"
            android:layout_gravity="top"
            android:text="22" />

    </GridLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Done"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:onClick="onDone"/>


</RelativeLayout>