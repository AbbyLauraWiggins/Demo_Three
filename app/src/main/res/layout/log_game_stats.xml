<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="LOG GAME STATISTICS"
        android:id="@+id/logGameStatsTitle"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/gridViewHolder"
        android:layout_below="@+id/logGameStatsTitle"
        android:padding="10dp"
        >

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/frontRowLayout"
            android:layout_centerHorizontal="true"
            android:columnCount="3">

            <Button
                android:id="@+id/button1"
                android:layout_column="0"
                android:layout_gravity="top"
                android:text="1" />

            <Button
                android:id="@+id/button2"
                android:layout_column="1"
                android:layout_gravity="top"
                android:text="2" />

            <Button
                android:id="@+id/button3"
                android:layout_column="2"
                android:layout_gravity="top"
                android:text="3" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondRowLayout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/frontRowLayout"
            android:columnCount="4">

            <Button
                android:id="@+id/button6"
                android:layout_column="0"
                android:layout_gravity="top"
                android:text="6" />

            <Button
                android:id="@+id/button4"
                android:layout_column="1"
                android:layout_gravity="top"
                android:text="4" />

            <Button
                android:id="@+id/button5"
                android:layout_column="2"
                android:layout_gravity="top"
                android:text="5" />

            <Button
                android:id="@+id/button7"
                android:layout_column="3"
                android:layout_gravity="top"
                android:text="7" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backRowLayout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/secondRowLayout"
            android:columnCount="1">

            <Button
                android:id="@+id/button8"
                android:layout_column="0"
                android:layout_gravity="top"
                android:text="8" />


        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/backLineLayout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/backRowLayout"
            android:columnCount="4">

            <Button
                android:id="@+id/button9"
                android:layout_column="0"
                android:layout_gravity="top"
                android:text="9" />

            <Button
                android:id="@+id/button10"
                android:layout_column="1"
                android:layout_gravity="top"
                android:text="10" />

            <Button
                android:id="@+id/button12"
                android:layout_column="2"
                android:layout_gravity="top"
                android:text="12" />

            <Button
                android:id="@+id/button13"
                android:layout_column="3"
                android:layout_gravity="top"
                android:text="13" />

        </GridLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/backLineLayout"
            android:id="@+id/wingerLayout">

            <Button
                android:id="@+id/button11"
                android:layout_alignParentLeft="true"
                android:layout_gravity="top"
                android:text="11"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

            <Button
                android:id="@+id/button14"
                android:layout_alignParentRight="true"
                android:layout_gravity="top"
                android:text="14"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/wingerLayout"
            android:id="@+id/fullBackLayout">

            <Button
                android:id="@+id/button15"
                android:layout_centerHorizontal="true"
                android:layout_gravity="top"
                android:text="15"
                android:layout_height="wrap_content"
                android:layout_width="wrap_content"/>

        </RelativeLayout>


        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/firstSubsLayout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fullBackLayout"
            android:columnCount="4">

            <Button
                android:id="@+id/button16"
                android:layout_column="0"
                android:layout_gravity="top"
                android:text="16" />

            <Button
                android:id="@+id/button17"
                android:layout_column="1"
                android:layout_gravity="top"
                android:text="17" />

            <Button
                android:id="@+id/button18"
                android:layout_column="2"
                android:layout_gravity="top"
                android:text="18" />

            <Button
                android:id="@+id/button19"
                android:layout_column="3"
                android:layout_gravity="top"
                android:text="19" />

        </GridLayout>

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/secondSubsLayout"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/firstSubsLayout"
            android:columnCount="3">

            <Button
                android:id="@+id/button20"
                android:layout_column="0"
                android:layout_gravity="top"
                android:text="20" />

            <Button
                android:id="@+id/button21"
                android:layout_column="1"
                android:layout_gravity="top"
                android:text="21" />

            <Button
                android:id="@+id/button22"
                android:layout_column="2"
                android:layout_gravity="top"
                android:text="22" />

        </GridLayout>
    </RelativeLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottomGrid"
        android:layout_alignParentBottom="true"
        android:background="@color/colorPrimary"
        android:columnCount="4"
        android:rowCount="4">

        <Button
            android:id="@+id/buttonTRY"
            android:layout_column="0"
            android:layout_row="0"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:text="Try" />

        <Button
            android:id="@+id/buttonOTRY"
            android:layout_column="1"
            android:layout_row="0"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:text="Try Against" />

        <Button
            android:id="@+id/buttonCON"
            android:layout_column="2"
            android:layout_row="0"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Conversion" />

        <Button
            android:id="@+id/buttonOCON"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:text="Conversion Against" />

        <Button
            android:id="@+id/buttonSCRUM"
            android:layout_column="0"
            android:layout_row="1"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Scrum Won" />

        <Button
            android:id="@+id/buttonOSCRUM"
            android:layout_column="1"
            android:layout_row="1"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Scrum Lost" />
        <Button
            android:id="@+id/buttonLO"
            android:layout_column="2"
            android:layout_row="1"
            android:layout_gravity="top"
            android:textSize="10sp"
            android:text="Line Out Won" />

        <Button
            android:id="@+id/buttonOLO"
            android:layout_column="3"
            android:layout_row="1"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Line Out Lost" />

        <Button
            android:id="@+id/buttonMAUL"
            android:layout_column="0"
            android:layout_row="2"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Maul Won" />

        <Button
            android:id="@+id/buttonOMAUL"
            android:layout_column="1"
            android:layout_row="2"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Maul Lost" />

        <Button
            android:id="@+id/buttonDG"
            android:layout_column="2"
            android:layout_row="2"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Drop Goal" />

        <Button
            android:id="@+id/buttonODG"
            android:layout_column="3"
            android:layout_row="2"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Their Drop Goal" />

        <Button
            android:id="@+id/buttonPK"
            android:layout_column="0"
            android:layout_row="3"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Penalty Kick" />

        <Button
            android:id="@+id/buttonOPK"
            android:layout_column="1"
            android:layout_row="3"
            android:textSize="10sp"
            android:layout_gravity="top"
            android:text="Their Penalty Kick" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Done"
            android:layout_column="2"
            android:layout_columnSpan="2"
            android:layout_row="3"
            android:id="@+id/doneButton"
            android:onClick="onDone"/>

    </GridLayout>


    <android.support.v7.widget.ButtonBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/buttonBarLayout"
        android:layout_alignParentBottom="true"
        android:background="@android:color/black">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/homeBBLL"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/homeBarButton"
                android:src="@drawable/ic_chat_black_48dp"
                android:tint="#ffc400"
                android:layout_gravity="center_horizontal"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/noticeBBLL"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/noticesBarButton"
                android:src="@drawable/ic_chat_black_48dp"
                android:tint="#ffc400"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/profileBBLL"
            android:orientation="vertical">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/profileBarButton"
                android:src="@drawable/ic_chat_black_48dp"
                android:tint="#ffc400"
                android:layout_gravity="center_horizontal"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/logBBLL"
            android:orientation="vertical">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/logBarButton"
                android:src="@drawable/ic_note_add_black_48dp"
                android:tint="#ffc400"
                android:layout_gravity="center_horizontal"/>

        </LinearLayout>


    </android.support.v7.widget.ButtonBarLayout>

</RelativeLayout>