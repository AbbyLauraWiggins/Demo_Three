<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.degree.abbylaura.demothree">
    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET"/>


    <application
        android:name=".App.App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Activities.SignIn.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.HomeActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".Activities.Notices.NoticeActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".Activities.Notices.NoticeComposeActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Activities.StatisticsActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".Activities.LogActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".Activities.CalendarActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".Activities.GalleryActivity"
            android:theme="@style/AppTheme"/>

        <activity
            android:name=".Activities.Members.MembersActivity"
            android:theme="@style/AppTheme"/>


        <activity
            android:name=".Activities.SignIn.RegisterActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Test.TestDatabaseActivity"
            android:theme="@style/AppTheme" />

        <activity
            android:name=".Activities.ProfileActivity"
            android:theme="@style/AppTheme"/>

        <service android:name=".Activities.ServerService"/>
    </application>

</manifest>