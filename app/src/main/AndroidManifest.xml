            android:name=".Activities.CalendarActivity"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Activities.GalleryActivity"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Activities.Members.MembersActivity"
            android:theme="@android:style/Theme.Holo.Light"/>


        <activity
            android:name=".Activities.SignIn.RegisterActivity"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Test.TestDatabaseActivity"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Activities.ProfileActivity"
            android:theme="@style/Theme.AppCompat.Light"/>

        <activity
            android:name=".Activities.Statistics.TeamStats"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Activities.Statistics.MyStats"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Activities.Statistics.MySCStats"
