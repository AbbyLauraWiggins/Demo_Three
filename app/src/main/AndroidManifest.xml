            </intent-filter>
        </activity>

        <activity
            android:name=".Activities.HomeActivity"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Activities.Notices.NoticeActivity"
            android:theme="@android:style/Theme.Holo.Light"/>

        <activity
            android:name=".Activities.Notices.NoticeComposeActivity"
